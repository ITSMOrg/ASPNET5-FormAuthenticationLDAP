@model LoginWithLDAP.LoginViewModel
@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@inject Microsoft.AspNet.Identity.SignInManager<LoginWithLDAP.MyUser> SignInManager

@{
    Layout = "_Layout";
    ViewBag.Title = "Log in";
}

<div class="jumbotron">
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <h1>Login!</h1>

                <form asp-controller="App" asp-action="Login"
                      asp-route-returnurl="@ViewBag.ReturnUrl" method="post" role="form">

                    <p>Use your active directory account to log in...</p>
                    <hr />

                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Username" class="form-control input-small" placeholder="Username" style="width: 250px" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" style="width: 250px" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log in" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
